@model CinemaDomain.Model.Hall

@{
    ViewData["Title"] = "Видалити зал";
}

<div class="container py-5">
    <h1 class="mb-4" style="color: #1a2a44; font-weight: 700; font-size: 2.5rem; border-bottom: 2px solid #d4af37; padding-bottom: 0.5rem;">Видалити зал</h1>

    <div class="card shadow-sm p-4">
        <h3>Ви впевнені, що хочете видалити цей зал?</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalSeats)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalSeats)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cinema)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cinema.Name)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-2"></i>Видалити</button>
                <a asp-controller="Cinemas" asp-action="Index" class="btn btn-secondary-custom"><i class="fas fa-arrow-left me-2"></i>Назад</a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background-color: #fff;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1a2a44;
        border-bottom: 2px solid #d4af37;
        padding-bottom: 0.5rem;
    }

    .card {
        background-color: #fff;
        border-radius: 10px;
        border: 1px solid #e0e4d7;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
        border-radius: 8px;
        padding: 0.5rem 1.25rem;
        font-weight: 500;
        text-transform: uppercase;
        transition: background-color 0.3s ease, transform 0.1s ease;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
            transform: scale(1.05);
        }

    .btn-secondary-custom {
        background-color: #666;
        border-color: #666;
        color: #fff;
        border-radius: 8px;
        padding: 0.5rem 1.25rem;
        font-weight: 500;
        text-transform: uppercase;
        transition: background-color 0.3s ease, transform 0.1s ease;
    }

        .btn-secondary-custom:hover {
            background-color: #555;
            border-color: #555;
            transform: scale(1.05);
        }
</style>