@model CinemaDomain.Model.Hall

@{
    ViewData["Title"] = "Редагувати зал";
}

<div class="container py-5">
    <h1 class="mb-4" style="color: #1a2a44; font-weight: 700; font-size: 2.5rem; border-bottom: 2px solid #d4af37; padding-bottom: 0.5rem;">Редагувати зал</h1>

    <div class="card shadow-sm p-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CinemaId" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TotalSeats" class="form-label"></label>
                <select asp-for="TotalSeats" class="form-control custom-select">
                    <option value="24" selected="@(Model.TotalSeats == 24)">24 місця</option>
                    <option value="36" selected="@(Model.TotalSeats == 36)">36 місць</option>
                    <option value="43" selected="@(Model.TotalSeats == 43)">43 місця</option>
                </select>
                <span asp-validation-for="TotalSeats" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2 mb-3">
                <button type="submit" class="btn btn-primary-custom"><i class="fas fa-save me-2"></i>Зберегти</button>
                <a asp-controller="Cinemas" asp-action="Index" class="btn btn-secondary-custom"><i class="fas fa-arrow-left me-2"></i>Назад</a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background-color: #fff;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1a2a44;
        border-bottom: 2px solid #d4af37;
        padding-bottom: 0.5rem;
    }

    .card {
        background-color: #fff;
        border-radius: 10px;
        border: 1px solid #e0e4d7;
    }

    .form-label {
        font-weight: 500;
        color: #666;
    }

    .form-control, .custom-select {
        border-radius: 8px;
        border: 1px solid #e0e4d7;
        padding: 0.5rem 1rem;
        transition: border-color 0.2s ease;
        background-color: #fff;
        color: #333;
    }

        .form-control:focus, .custom-select:focus {
            border-color: #1a2a44;
            box-shadow: 0 0 0 0.2rem rgba(26, 42, 68, 0.25);
        }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .btn-primary-custom {
        background-color: #1a2a44;
        border-color: #1a2a44;
        color: #fff;
        border-radius: 8px;
        padding: 0.5rem 1.25rem;
        font-weight: 500;
        text-transform: uppercase;
        transition: background-color 0.3s ease, transform 0.1s ease;
    }

        .btn-primary-custom:hover {
            background-color: #800020;
            border-color: #800020;
            transform: scale(1.05);
        }

    .btn-secondary-custom {
        background-color: #666;
        border-color: #666;
        color: #fff;
        border-radius: 8px;
        padding: 0.5rem 1.25rem;
        font-weight: 500;
        text-transform: uppercase;
        transition: background-color 0.3s ease, transform 0.1s ease;
    }

        .btn-secondary-custom:hover {
            background-color: #555;
            border-color: #555;
            transform: scale(1.05);
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
