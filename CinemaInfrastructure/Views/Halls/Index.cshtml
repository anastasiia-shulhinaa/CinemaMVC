@model IEnumerable<CinemaDomain.Model.Hall>

@{
    ViewData["Title"] = "Доступні сеанси";
}

<h1>Зали для кінотеатру: @ViewBag.CinemaName</h1>

<p>
    <!-- Посилання для створення нового залу для конкретного кінотеатру -->
    <a asp-action="Create" asp-route-cinemaId="@ViewBag.CinemaId" class="btn btn-primary">Create New Hall</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Зал</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.TotalSeats)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalSeats)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

