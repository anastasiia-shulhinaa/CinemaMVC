@{
    ViewData["Title"] = "Select Schedule";
}

<h2>Select a Schedule for @ViewBag.Hall.Name</h2>

<form asp-action="SelectSessionType">
    <input type="hidden" name="movieId" value="@ViewBag.MovieId" />
    <select name="scheduleId" class="form-control">
        @foreach (var schedule in ViewBag.Schedules)
        {
            <option value="@schedule.Value">@schedule.Text</option>
        }
    </select>
    <button type="submit" class="btn btn-primary mt-3">Next</button>
</form>
