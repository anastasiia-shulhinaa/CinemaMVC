@model CinemaInfrastructure.ViewModels.CreateSessionViewModel

@{
    ViewData["Title"] = "Створити сеанс (Користувач)";
}

<h1>Створити сеанс</h1>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Фільм</label>
        @Html.DropDownListFor(m => m.SelectedMovieId, new SelectList(Model.Movies, "Id", "Title"), "Оберіть фільм", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Кінотеатр</label>
        @Html.DropDownListFor(m => m.SelectedCinemaId, new SelectList(Model.Cinemas, "Id", "Name"), "Оберіть кінотеатр", new { @class = "form-control" })
        <input type="submit" name="submitAction" value="UpdateHalls" class="btn btn-secondary" />
    </div>

    <div class="form-group">
        <label>Зал</label>
        @Html.DropDownListFor(m => m.SelectedHallId, new SelectList(Model.Halls, "Id", "Name"), "Оберіть зал", new { @class = "form-control" })
        <input type="submit" name="submitAction" value="UpdateSchedules" class="btn btn-secondary" />
    </div>

    <div class="form-group">
        <label>Розклад</label>
        @Html.DropDownListFor(m => m.SelectedScheduleId, new SelectList(Model.Schedules, "Id", "StartTime"), "Оберіть розклад", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Тип сеансу</label>
        @Html.DropDownListFor(m => m.SessionType, new SelectList(new List<SelectListItem>
    {
    new SelectListItem { Value = "public", Text = "Публічний" },
    new SelectListItem { Value = "private", Text = "Приватний" }
    }, "Value", "Text"), new { @class = "form-control" })
    </div>

    <button type="submit" name="submitAction" value="Submit" class="btn btn-primary">Створити</button>
}
