@model CinemaDomain.Model.Session

@{
    ViewData["Title"] = "Select Seats";
}

<h2>Select Seats for the Session</h2>

<form asp-action="ConfirmSeatSelection">
    <input type="hidden" name="sessionId" value="@Model.Id" />

    <div class="form-group">
        <label>Select your seats:</label>
        <div>
            @foreach (var seat in ViewBag.Seats)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="seatIds" value="@seat.Id" id="seat_@seat.Id" />
                    <label class="form-check-label" for="seat_@seat.Id">
                        Row: @seat.RowNumber, Seat: @seat.SeatNumber
                    </label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Confirm Seats</button>
</form>

<div>
    <a asp-action="SelectSessionType" asp-route-movieId="@ViewBag.MovieId" asp-route-scheduleId="@ViewBag.ScheduleId" class="btn btn-secondary">Back to Session Type</a>
</div>
