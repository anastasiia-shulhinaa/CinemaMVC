@model CinemaInfrastructure.ViewModels.MyBookingsViewModel

<main class="container my-5">
    <h1 class="section-title text-center mb-5">Мої Бронювання</h1>

    <!-- Private Bookings -->
    <section class="bookings-section mb-5">
        <h2 class="section-subtitle">Приватні Бронювання</h2>
        @if (!Model.PrivateBookings.Any())
        {
            <p class="text-muted">Приватних бронювань немає.</p>
        }
        else
        {
            <div class="row">
                @foreach (var booking in Model.PrivateBookings)
                {
                    <div class="col-lg-4 col-md-6 col-12 mb-4">
                        <div class="card booking-card shadow-sm">
                            <div class="banner-container">
                                @if (!string.IsNullOrEmpty(booking.Session.Movie.BannerUrl))
                                {
                                    <img src="@booking.Session.Movie.BannerUrl" class="card-img-top" alt="@booking.Session.Movie.Title" />
                                }
                                else
                                {
                                    <div class="no-photo-placeholder">
                                        <p class="text-muted">Постер відсутній</p>
                                    </div>
                                }
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@booking.Session.Movie.Title</h5>
                                <div class="ticket-info">
                                    <p><strong>Кінотеатр:</strong> <span class="highlight-text">@booking.Session.Schedule.Hall.Cinema.Name</span></p>
                                    <p><strong>Зал:</strong> <span class="highlight-text">@booking.Session.Schedule.Hall.Name</span></p>
                                    <p><strong>Розклад:</strong> <span class="highlight-text">@booking.Session.Schedule.StartTime.ToString("dd.MM.yyyy HH:mm")</span></p>
                                    <p><strong>Ціна:</strong> <span class="highlight-text">@(booking.PrivateBookingPrice?.ToString("C", new System.Globalization.CultureInfo("uk-UA")) ?? "N/A")</span></p>
                                    <p><strong>Дата Бронювання:</strong> <span class="highlight-text">@booking.BookingDate.ToString("dd.MM.yyyy HH:mm")</span></p>
                                </div>
                                <form asp-controller="Bookings" asp-action="DownloadTicket" method="post" class="text-center mt-4">
                                    <input type="hidden" name="BookingId" value="@booking.Id" />
                                    <button type="submit" class="btn btn-maroon">Завантажити квиток</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </section>

    <!-- Ticket Bookings -->
    <section class="bookings-section">
        <h2 class="section-subtitle">Бронювання Квитків</h2>
        @if (!Model.TicketBookings.Any())
        {
            <p class="text-muted">Бронювань квитків немає.</p>
        }
        else
        {
            <div class="row">
                @foreach (var booking in Model.TicketBookings)
                {
                    <div class="col-lg-4 col-md-6 col-12 mb-4">
                        <div class="card booking-card shadow-sm">
                            <div class="banner-container">
                                @if (!string.IsNullOrEmpty(booking.Session.Movie.BannerUrl))
                                {
                                    <img src="@booking.Session.Movie.BannerUrl" class="card-img-top" alt="@booking.Session.Movie.Title" />
                                }
                                else
                                {
                                    <div class="no-photo-placeholder">
                                        <p class="text-muted">Постер відсутній</p>
                                    </div>
                                }
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@booking.Session.Movie.Title</h5>
                                <div class="ticket-info">
                                    <p><strong>Кінотеатр:</strong> <span class="highlight-text">@booking.Session.Schedule.Hall.Cinema.Name</span></p>
                                    <p><strong>Зал:</strong> <span class="highlight-text">@booking.Session.Schedule.Hall.Name</span></p>
                                    <p><strong>Розклад:</strong> <span class="highlight-text">@booking.Session.Schedule.StartTime.ToString("dd.MM.yyyy HH:mm")</span></p>
                                    <p><strong>Місця:</strong> <span class="highlight-text">@string.Join(", ", booking.SessionSeats.Select(ss => $"Ряд {ss.Seat.RowNumber} Місце {ss.Seat.SeatNumber}"))</span></p>
                                    <p><strong>Загальна Ціна:</strong> <span class="highlight-text">@booking.SessionSeats.Sum(ss => ss.Price).ToString("C", new System.Globalization.CultureInfo("uk-UA"))</span></p>
                                    <p><strong>Дата Бронювання:</strong> <span class="highlight-text">@booking.BookingDate.ToString("dd.MM.yyyy HH:mm")</span></p>
                                </div>
                                <form asp-controller="Bookings" asp-action="DownloadTicket" method="post" class="text-center mt-4">
                                    <input type="hidden" name="BookingId" value="@booking.Id" />
                                    <button type="submit" class="btn btn-maroon">Завантажити квиток</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </section>
</main>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #800020;
        text-align: center;
        margin-bottom: 40px;
        position: relative;
    }

        .section-title::after {
            content: '';
            width: 120px;
            height: 5px;
            background-color: #d4af37;
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 2px;
        }

    .section-subtitle {
        font-size: 2rem;
        font-weight: 600;
        color: #800020;
        text-align: center;
        margin-bottom: 30px;
        position: relative;
    }

        .section-subtitle::after {
            content: '';
            width: 80px;
            height: 4px;
            background-color: #d4af37;
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 2px;
        }

    .bookings-section {
        margin-bottom: 50px;
    }

    .booking-card {
        border: none;
        border-radius: 12px;
        background-color: #fff9e6;
        transition: transform 0.3s, box-shadow 0.3s;
        width: 100%;
        max-width: 350px;
        margin: 0 auto;
    }

        .booking-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

    .banner-container {
        position: relative;
        width: 100%;
        padding-top: 75%; /* 4:3 aspect ratio */
        background-color: #f0e4d7;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        overflow: hidden;
    }

    .card-img-top {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
        object-position: center;
    }

    .no-photo-placeholder {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f0e4d7;
        color: #800020;
        font-weight: 500;
        text-align: center;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .card-body {
        padding: 15px;
    }

    .card-title {
        font-size: 1.3rem;
        color: #800020;
        margin-bottom: 10px;
        font-weight: 600;
        text-align: center;
    }

    .ticket-info {
        background-color: #f9f2e7;
        border-left: 3px solid #d4af37;
        padding: 10px;
        border-radius: 6px;
    }

        .ticket-info p {
            margin: 5px 0;
            font-size: 0.95rem;
            color: #333;
        }

        .ticket-info strong {
            color: #800020;
            font-weight: 600;
            display: inline-block;
            width: 110px;
        }

        .ticket-info .highlight-text {
            font-weight: 700;
            font-size: 1rem;
            color: white;
            background-color: #800020;
            padding: 2px 6px;
            border-radius: 4px;
            display: inline-block;
        }

    .btn-maroon {
        background-color: #800020;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 6px;
        transition: background-color 0.3s;
    }

        .btn-maroon:hover {
            background-color: #660018;
            color: white;
        }

    .text-muted {
        color: #6c757d !important;
        font-size: 0.95rem;
        text-align: center;
    }

    /* Responsive Adjustments */
    @@media (max-width: 767px) {
        .container

    {
        padding: 15px;
    }

    .section-title {
        font-size: 2rem;
    }

    .section-subtitle {
        font-size: 1.8rem;
    }

    .booking-card {
        max-width: 100%;
        margin: 0 10px;
    }

    .banner-container {
        padding-top: 100%; /* 1:1 aspect ratio for mobile */
    }

    .card-title {
        font-size: 1.2rem;
    }

    .ticket-info p {
        font-size: 0.9rem;
    }

    .ticket-info .highlight-text {
        font-size: 0.95rem;
    }

    .ticket-info strong {
        width: auto;
        display: block;
        margin-bottom: 0.25rem;
    }

    }
</style>