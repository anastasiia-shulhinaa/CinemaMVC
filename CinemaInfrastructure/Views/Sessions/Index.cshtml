@model IEnumerable<CinemaDomain.Model.Session>

@{
    ViewData["Title"] = "Доступні сеанси";
}

<h1>Доступні сеанси</h1>

<p>
    <a asp-controller="Movies" asp-action="Index" class="btn btn-primary">Оберіть фільм для створення сеансу</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Дата створення</th>
            <th>Статус</th>
            <th>Фільм</th>
            <th>Розклад</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@DateTime.FromBinary(BitConverter.ToInt64(item.CreatedAt, 0)).ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(item.IsActive[0] == 1 ? "Active" : "Inactive")</td>
                <td>@item.Movie.Title</td>
                <td>@($"{item.Schedule.StartTime:HH:mm} ({item.Schedule.StartTime} min)")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
{
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', {'packages':['corechart']});
        google.charts.setOnLoadCallback(drawMovieSessionsChart);

        function drawMovieSessionsChart() {
            fetch('/api/charts/countByMovie') // Використовуємо правильний API
                .then(response => response.json())
                .then(data => {
                    const dataTable = new google.visualization.DataTable();
                    dataTable.addColumn('string', 'Фільм');
                    dataTable.addColumn('number', 'Кількість сеансів');

                    data.forEach(item => {
                        dataTable.addRow([item.movieTitle, item.sessionCount]);
                 });

                    const options = {
                        title: 'Кількість сеансів за назвами фільмів',
                        width: 600,
                        height: 400,
                        pieHole: 0.4, // Для стильного вигляду як "donut"
                        legend: { position: 'right' }
                    };

                    const chart = new google.visualization.PieChart(document.getElementById('movieSessionsChart'));

                    chart.draw(dataTable, options);
                });
        }
    </script>
}

