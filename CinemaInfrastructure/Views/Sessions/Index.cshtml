@model IEnumerable<CinemaDomain.Model.Session>

@{
    ViewData["Title"] = "Доступні сеанси";
}

<h1>Доступні сеанси</h1>

<p>
    <a asp-controller="Movies" asp-action="Index" class="btn btn-primary">Оберіть фільм для створення сеансу</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Дата створення</th>
            <th>Статус</th>
            <th>Фільм</th>
            <th>Розклад</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!-- Correctly display CreatedAt as DateTime -->
                <td>@item.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>

                <!-- Display IsActive directly as a boolean -->
                <td>@(item.IsActive ? "Active" : "Inactive")</td>

                <!-- Display Movie Title -->
                <td>@item.Movie.Title</td>

                <!-- Display Schedule Start Time -->
                <td>@($"{item.Schedule.StartTime:HH:mm} ({item.Schedule.StartTime} min)")</td>

                <!-- Action buttons -->
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

