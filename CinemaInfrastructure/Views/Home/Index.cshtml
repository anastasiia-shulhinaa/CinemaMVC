@{
    ViewData["Title"] = "Home Page";
}


    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
        <style>
            .movie-card {
                position: relative;
                overflow: hidden;
                border-radius: 10px;
            }

                .movie-card img {
                    width: 100%;
                    border-radius: 10px;
                    object-fit: cover;
                    max-height: 250px
                }

        .custom-session-btn {
            position: absolute;
            bottom: 20px;
            left: 20px;
            background: rgba(255, 255, 255, 0.95); 
            border: 2px solid white; 
            color: black;
            font-size: 20px;
            font-weight: bold;
            padding: 10px 25px; 
            border-radius: 30px;
            backdrop-filter: blur(5px);
            transition: all 0.3s ease-in-out;
            cursor: pointer;
            box-shadow: 0px 6px 14px rgba(0, 0, 0, 0.4); 
            text-decoration: none !important;
        }

            .custom-session-btn:hover {
                background: #800020; 
                color: white; 
                border-color: #800020; 
                transform: scale(1.05); 
            }

            .watch-now {
                position: absolute;
                bottom: 10px;
                left: 50%;
                transform: translateX(-50%);
                background-color: ButtonShadow; 
                border: none;
                padding: 8px 15px;
                font-size: 14px;
                font-weight: bold;
                color: white;
                border-radius: 5px;
                opacity: 0.9;
            }

                .watch-now:hover {
                    opacity: 1;
                }
        </style>
    </head>
    <body>

        <div class="container mt-4">
            <div class="row">
                <div class="col">
                    <div class="movie-card">
                        <img src="/cinema_icon1.jpg" alt="Supernatural Banner">
                    <a asp-controller="Movies" class="custom-session-btn">
                        Створити кіносеанс
                    </a>
                    </div>
                </div>
            </div>


            <h3 class="mt-4">Доступні сеанси</h3>
            <div id="nowPlayingCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="movie-card">
                                    <img src="movie1.jpg" alt="Фільм 1">
                                    <button class="watch-now">Watch Now</button>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="movie-card">
                                <img src="movie2.jpg" alt="Фільм 2">
                                    <button class="watch-now">Watch Now</button>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="movie-card">
                                <img src="movie3.jpg" alt="Фільм 3">
                                    <button class="watch-now">Watch Now</button>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="movie-card">
                                <img src="movie4.jpg" alt="Фільм 4">
                                    <button class="watch-now">Watch Now</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="movie-card">
                                <img src="movie5.jpg" alt="Фільм 5">
                                    <button class="watch-now">Watch Now</button>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="movie-card">
                                <img src="movie6.jpg" alt="Фільм 6">
                                    <button class="watch-now">Watch Now</button>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="movie-card">
                                <img src="movie7.jpg" alt="Фільм 7">
                                    <button class="watch-now">Watch Now</button>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="movie-card">
                                <img src="movie8.jpg" alt="Фільм 8">
                                    <button class="watch-now">Watch Now</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#nowPlayingCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#nowPlayingCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>

           
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>

