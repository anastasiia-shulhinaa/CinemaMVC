@model CinemaDomain.Model.Schedule

<form asp-action="Edit">
    <div class="form-group">
        <label for="StartTime">Start Time</label>
        <input type="time" id="StartTime" name="StartTime" class="form-control" value="@Model.StartTime.ToString(@"hh\:mm")" required />
    </div>

    <div class="form-group">
        <label for="EndTime">End Time</label>
        <input type="time" id="EndTime" name="EndTime" class="form-control" value="@Model.EndTime.ToString(@"hh\:mm")" />
    </div>

    <div class="form-group">
        <label for="HallId">Hall</label>
        @Html.DropDownListFor(m => m.HallId, (SelectList)ViewData["HallId"], "-- Select Hall --", new { @class = "form-control", required = "required" })
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
