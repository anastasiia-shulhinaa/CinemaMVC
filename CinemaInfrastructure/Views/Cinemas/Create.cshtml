@model CinemaDomain.Model.Cinema

<h2>Додати кінотеатр</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalCinemaHalls"></label>
        <input asp-for="TotalCinemaHalls" type="number" class="form-control" />
        <span asp-validation-for="TotalCinemaHalls" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Додати</button>
</form>